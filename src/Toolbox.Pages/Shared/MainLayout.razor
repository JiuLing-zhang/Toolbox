@using Microsoft.Extensions.Configuration;
@using Toolbox.Pages.Shared.Dialogs;

@inherits LayoutComponentBase

@inject NavigationManager NavigationManager
@inject IConfiguration Configuration
@inject IDialogService DialogService

<MudThemeProvider />
<MudDialogProvider />
<MudSnackbarProvider />

<MudLayout>
    <MudAppBar Elevation="1" Dense="true" Color="Color.Dark">
        <MudIconButton Icon="@Icons.Material.Filled.Menu" Color="Color.Inherit" Edge="Edge.Start" OnClick="@ToggleDrawer" />
        <MudSpacer />

        @if (!PlatformSettings.IsApp)
        {
            <MudMenu Label="下载客户端"
                 Color="Color.Inherit"
                 Dense="true"
                 AnchorOrigin="Origin.BottomCenter">
                <MudMenuItem OnClick="@(()=>OnDownloadClick("6e13d0edd2d01d60aa476693600b147e"))">
                    <MudImage Class="mr-1" Src="@($"_content/Toolbox.Pages/images/windows.png")" Width="15" Height="15"></MudImage>
                    Windows 平台
                </MudMenuItem>
                <MudMenuItem OnClick="@(()=>OnDownloadClick("7f3678cc7d66c573b938d1a7d793fd94"))">
                    <MudImage Class="mr-1" Src="@($"_content/Toolbox.Pages/images/android.png")" Width="15" Height="15"></MudImage>
                    Android 平台
                </MudMenuItem>
            </MudMenu>
        }
        <MudHidden Breakpoint="Breakpoint.Xs" Invert="false">
            <MudIcon Class="ml-5" Icon="@Icons.Material.Filled.TipsAndUpdates" />
            <MudText Typo="Typo.subtitle1">人生苦短，用心写Bug</MudText>
        </MudHidden>
        <MudIconButton Class="ml-3" Icon="@Icons.Custom.Brands.GitHub" Color="Color.Inherit" Href="https://github.com/JiuLing-zhang" Target="_blank" />
    </MudAppBar>
    <MudDrawer @bind-Open="@open" Elevation="1">
        <MudDrawerHeader>
            <MudImage Src="_content/Toolbox.Pages/images/main-ascii.png" Width="80"></MudImage>
        </MudDrawerHeader>
        <NavMenu />
    </MudDrawer>
    <MudMainContent>
        <MudContainer>
            @Body
        </MudContainer>
    </MudMainContent>
</MudLayout>


@code {
    bool open = true;
    void ToggleDrawer()
    {
        open = !open;
    }

    private async void OnDownloadClick(string id)
    {
        var result = await DialogService.ShowMessageBox("警告", "当前版本未集成自动更新模块，确认要下载吗？", "下载", "取消");
        if (result == null || result == false)
        {
            return;
        }
        var url = $"{Configuration["WebAPIHost"]}/app/download/{id}";
        NavigationManager.NavigateTo(url);
    }
}